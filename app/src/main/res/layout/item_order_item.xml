<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/itemPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
        <!--tools:src="@drawable/pop_1" />-->

    <TextView
        android:id="@+id/itemTitleTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/itemQuantityTxt"
        app:layout_constraintStart_toEndOf="@+id/itemPic"
        app:layout_constraintTop_toTopOf="@+id/itemPic"
        tools:text="Tên sản phẩm rất dài và nhiều chữ" />

    <TextView
        android:id="@+id/itemPriceTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/darkGrey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/itemTitleTxt"
        app:layout_constraintStart_toStartOf="@+id/itemTitleTxt"
        app:layout_constraintTop_toBottomOf="@+id/itemTitleTxt"
        tools:text="Giá: đ12.50" />

    <TextView
        android:id="@+id/itemQuantityTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="x3" />

</androidx.constraintlayout.widget.ConstraintLayout>